<Window x:Class="MSDL_GUI.DownloadOptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Icon="assets\logo.png"
        ResizeMode="NoResize"
        Title="Options" Height="180" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Please select a version" Margin="0,0,0,20"/>
            <Button x:Name="X32Button" Content="32 Bit" Click="X86Button_Click" Width="140" Margin="0,0,0,10" IsEnabled="{Binding Is32BitEnabled}"/>
            <Button x:Name="X64Button" Content="64 Bit" Click="X64Button_Click" Width="140"/>
        </StackPanel>
    </Grid>
</Window>
